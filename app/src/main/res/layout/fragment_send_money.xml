<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.SendMoney">

    <include
        android:id="@+id/include2"
        layout="@layout/custom_toolbar" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />


    <ImageView
        android:id="@+id/rectansombra"
        android:layout_width="408dp"
        android:layout_height="101dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangulosombrapng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="192dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintVertical_bias="0.027"
        tools:ignore="MissingConstraints">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/profilepicture6" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="33dp"
            android:fontFamily="@font/jua_normal"
            android:text="Yara Khalil"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="123dp"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/jua_normal"
            android:text="yara_khalil@gmail.com"
            android:textColor="@color/grisAlke"
            android:textSize="12sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintVertical_bias="0.155">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/jua_normal"
            android:text="Cantidad a transferir"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="345dp"
            android:layout_height="56dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_verde"
            android:textColorHint="@color/verdeAlke">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/add_payment"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:alpha="0.0"
                android:fontFamily="@font/jua_normal"
                android:gravity="top"
                android:hint="Ingresar Monto"
                android:inputType="numberDecimal"
                android:textColor="@color/azulalkeosc"
                android:textSize="14sp"
                android:translationY="-1.75sp">


            </com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="230dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintVertical_bias="0.365">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/jua_normal"
            android:text="Notas de transferencia"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="345dp"
            android:layout_height="200dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangulo_gris_alke"
            android:textColorHint="@color/grisAlke">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/add_payment"
                android:layout_width="321dp"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:alpha="0.25"
                android:fontFamily="@font/jua_normal"
                android:gravity="top"
                android:hint="Agregar notas de transferencia (opcional)"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:translationY="-1.75sp">


            </com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttonverde1"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botonverde_alke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/jua_normal"
            android:foregroundGravity="center_horizontal"
            android:text="@string/enviar_dinero"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:translationY="15dp">

        </TextView>

        <ImageView
            android:id="@+id/logosend"
            android:layout_width="35dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="84dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/send_icon" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


